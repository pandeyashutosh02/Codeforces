#include<iostream>
using namespace std;
int main(){
    string s;
    int t;cin>>t;
    while(t--){
        cin>>s;
        
        int n = s.length();
        if(n>10 && n<=100){
            cout<<s[0]<<n-2<<s[n-1]<<endl;
        }
        else{
            cout<<s<<endl;
        }
    }
    return 0;
}






#include<iostream>
using namespace std;
int main(){
    int n,k,count=0;
    cout<<"enter n : ";
    cin>>n;
    cout<<"enter k : ";
    cin>>k;
    int arr[10000];
    cout<<"enter array elements : "<<endl;
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    for(int i=0;i<n;i++){
        if(arr[i]>=arr[k-1] && arr[i]>0)count++;
    }
    cout<<count<<endl;
    return 0;
}
